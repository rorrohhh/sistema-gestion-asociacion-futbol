generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL") // 
}

// Modelo para Clubes
model Club {
  id        Int       @id @default(autoincrement())
  nombre    String    @unique
  jugadores Jugador[] // Relación: Un club tiene muchos jugadores

  @@map("clubes") // Nombre real de la tabla en BD
}

// Modelo para Jugadores
model Jugador {
  id          Int      @id @default(autoincrement())
  numero      Int?
  paterno     String
  materno     String
  nombres     String
  rut         Int // Guardamos la parte numérica
  dv          String   @db.Char(1)
  rol         String?
  nacimiento  DateTime @db.Date
  inscripcion DateTime @db.Date

  // Relación con Club
  clubId Int
  club   Club @relation(fields: [clubId], references: [id])

  @@map("jugadores")
}
